@using System.Linq
@using NuGetFeed.ViewModels

@model PackageSearchViewModel

@{
    ViewBag.Title = "Packages - NuGet feed";
}

<div class="container" style="padding-top: 20px;">
    @using (Html.BeginForm("Index", "Packages", FormMethod.Get)) 
    {
        <div class="input">
            <input name="searchTerm" value="@(Model.SearchTerm ?? string.Empty)" class="input-xxlarge" type="text" placeholder="Search packages">
        </div>
    }
</div>

@if (Model.Packages != null)
{
    if (Model.Packages.Count == 0)
    {
        <div class="container">
            <h2>No packages found</h2>
        </div>
    }
    else
    {
        <div class="container">
            @foreach (var package in Model.Packages)
            {
                <div class="actions">
                    <h2><a href="@Url.Action("Packages", "List")/@package.Id">@package.Title</a></h2>
                    <p>@package.Description</p>
                    <p>
                        @package.DownloadCount Downloads 
                        @if (package.Tags != null)
                        {
                            @:| Tags:
                            foreach (var tag in @package.Tags.Split(' '))
                            {
                                <a href="@Url.Action("Index", "Packages")?searchTerm=@tag">@tag</a>
                            }
                        }
                    </p>
                </div>
            }
        </div>
    }
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#nav-packages').addClass('active');
    });
</script>