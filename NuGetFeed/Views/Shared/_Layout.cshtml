<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="google-site-verification" content="2rnMK5FI5Fz24vFokQAGGpcmntNMrIyoFf2xKfbyZH8" />
    <meta name="description" content="NuGetFeed.org - Keep your dependencies fresh"/>
    <link rel="icon" href="@Url.Content("~/Content/Images/logo_32x32.png")" sizes="32x32"/>
    <link rel="icon" href="@Url.Content("~/Content/Images/logo_48x48.png")" sizes="48x48"/>
    
    <link href="@Url.Content("~/Content/Css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Css/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Content/Scripts/jquery-1.6.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/bootstrap-modal.js")" type="text/javascript"></script>

    <script src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e72e9371502bc94" type="text/javascript"></script>
</head>

<body>

    <div class="topmenu">
        <div class="container">
            <a href="@Url.Action("Index", "Home")"><img src="@Url.Content("/Content/Images/logo.png")"/></a>
            <div class="addthis_toolbox addthis_default_style" style="float: right; padding-top: 80px;">
                <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                <a class="addthis_button_tweet"></a>
                <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
                <a class="addthis_counter addthis_pill_style"></a>
            </div>
        </div>
    </div>
    <div class="topbar-wrapper">
        <div class="topbar">
            <div class="topbar-inner">
                <div class="container">
                    <ul class="nav">
                        <li id="nav-home"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        @*<li id="nav-packages"><a href="@Url.Action("Index", "Packages")">Packages</a></li>*@
                        @if (Request.IsAuthenticated)
                        {
                            <li id="nav-myfeed"><a href="@Url.Action("Index", "Feed")">My Feed</a></li>
                        }
                        <!--li id="nav-documentation"><a href="">Documentation</a></li-->
                    </ul>
                    <form class="pull-left" action="@Url.Action("Index", "Packages")" method="GET">
                        <input type="search" placeholder="Search Packages" name="query" />
                    </form>
                    <ul class="secondary-nav">
                        @if (Request.IsAuthenticated)
                        {
                            <li><a href="@Url.Action("Logout", "Account")">Log out</a></li>
                        }
                        else
                        {
                            <li><a href="#" data-controls-modal="modal-login" data-backdrop="true" data-keyboard="true">Log in</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="padding-top: 20px;">
        @RenderBody()
    </div>

    <div id="modal-login" class="modal hide fade">
        <div class="modal-header">
            <h3>Login</h3>
        </div>
        <div class="modal-body">
            <h2>Sign in with any of these sites:</h2>
            <form id="openid-form" method="POST" action="@Url.Action("OpenId", "Account")">
                <div id="openid-providers">
                    <ul class="large">
                        <li id="google"><img src="/Content/Images/Auth/large/google.gif" /></li>
                        <li id="yahoo"><img src="/Content/Images/Auth/large/yahoo.gif" /></li>
                        @*<li id="facebook"><img src="/Content/Images/Auth/large/facebook.gif" /></li>*@
                        <li id="myopenid"><img src="/Content/Images/Auth/large/myopenid.gif" /></li>
                    </ul>
@*                    <ul class="small">
                        <li id="openid"><img src="/Content/Images/Auth/small/openid.ico.png" /></li>
                        <li id="twitter"><img src="/Content/Images/Auth/small/twitter.ico.png" /></li>
                        <li id="linkedin"><img src="/Content/Images/Auth/small/linkedin.ico.png" /></li>
                        <li id="winliveid"><img src="/Content/Images/Auth/small/winliveid.ico.png" /></li>
                        <li id="aol"><img src="/Content/Images/Auth/small/aol.ico.png" /></li>
                        <li id="blogger"><img src="/Content/Images/Auth/small/blogger.ico.png" /></li>
                    </ul>*@
                </div>
                <div id="other">
                    <h5>Alternatively, you can manually enter your OpendID provider:</h5>
                    <input name="openIdUrl" id="openIdUrl" type="text" />
                    <a id="signin">Sign In »</a>
                </div>
            </form>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            var items = $('#openid-providers ul li');

            var providers = {
                myopenid: { action: '@Url.Action("OpenId", "Account")', url: 'http://myopenid.com' },
                google: { action: '@Url.Action("OpenId", "Account")', url: 'http://www.google.com/accounts/o8/id' },
                yahoo: { action: '@Url.Action("OpenId", "Account")', url: 'http://yahoo.com' }
            };

            $("#signin").click(function() {
                $("#openid-form").submit();
            });

            $("#openid-providers ul li").click(function () {
                items.removeClass("openid-highlight");
                $(this).addClass("openid-highlight");
                
                var id = $(this).attr("id");
                var provider = providers[id];
                if (provider.action != undefined) {
                    $("#openid-form").attr("action", provider.action);
                }
                if (provider.url != undefined) {
                    $("#openIdUrl").val(provider.url);
                }
                $("#openid-form").submit();
            });
        });
    </script>

