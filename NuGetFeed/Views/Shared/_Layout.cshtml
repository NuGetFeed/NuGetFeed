<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Css/bootstrap-1.3.0.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Css/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/Scripts/jquery-1.6.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <meta name="google-site-verification" content="2rnMK5FI5Fz24vFokQAGGpcmntNMrIyoFf2xKfbyZH8" />
</head>

<body>

    <div class="topmenu">
        <div class="container">
            <a href="@Url.Action("Index", "Home")"><img src="@Url.Content("/Content/Images/logo.png")"/></a>
        </div>
    </div>
    <div class="topbar-wrapper">
        <div class="topbar">
            <div class="topbar-inner">
                <div class="container">
                    <ul class="nav">
                        <li id="nav-home"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li id="nav-packages"><a href="@Url.Action("Index", "Packages")">Packages</a></li>
                        <li id="nav-documentation"><a href="">Documentation</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="padding-top: 20px;">
        @RenderBody()
    </div>

    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-25709477-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</body>
</html>
