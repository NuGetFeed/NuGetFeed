@{
    ViewBag.Title = "NuGet Feed";
}

<div class="hero-unit">
    <h1>Welcome to NuGet Feed</h1>
    <h2>Keep your dependencies fresh</h2>
    <p>Do you want to follow recent releases of your favorite NuGet packages? Tired of checking packages for updates through nuget.org or the NuGet Package Manager? All that is in the past!<br/>With nugetfeed.org you can follow new releases of any NuGet package with your RSS client.</p>
</div>

<div class="row">
    <div class="span12 columns offset2">
        @using (Html.BeginForm("Index", "Packages", FormMethod.Get))
        {
            <input class="input-xxlarge input-frontpage-search" id="searchbox" name="searchTerm" placeholder="Search Packages" type="search" />
        }
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#nav-home').addClass('active');
    });
</script>