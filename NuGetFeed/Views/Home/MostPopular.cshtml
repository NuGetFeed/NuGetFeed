@using NuGetFeed.ViewModels
@model IEnumerable<MostPopularViewModel>

@{
    ViewBag.Title = "Most Popular Packages - NuGet Feed";
}

<div class="page-header">
    <h1>Most Popular Packages</h1>
</div>

<p>
    These packages are the most popular packages followed in My Feed.
</p>

<table class="zebra-striped">
    <thead>
        <tr>
            <th>
                Package
            </th>
            <th>
                Feeds that include package
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@item.Package.GalleryDetailsUrl">@Html.DisplayFor(modelItem => item.Package.Title)</a>
            <br/>
            @if (Request.IsAuthenticated)
            {
                <span id="add@(item.Package.Id.Replace(".", string.Empty))">
                    @Ajax.ActionLink("Add to My Feed", "AddToMyFeed", "Feed", new { id = item.Package.Id }, new AjaxOptions() { HttpMethod = "get", UpdateTargetId = "add" + item.Package.Id.Replace(".", string.Empty) })
                </span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncludedInFeeds)%
        </td>
    </tr>
}
    </tbody>
</table>
